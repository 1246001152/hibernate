<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.xm.entity">

    <class name="Classes" table="classes">
        <id name="cId" column="C_ID">
            <generator class="increment"/>
        </id>
        <property name="className" type="java.lang.String" column="CLASSNAME"/>
        <!-- cascade="save-update"  强制级联保存 -->
        <set name="studentSet" cascade="save-update" inverse="true">
            <key column="C_ID"></key>
            <one-to-many class="Student"></one-to-many>
        </set>

    </class>

</hibernate-mapping>